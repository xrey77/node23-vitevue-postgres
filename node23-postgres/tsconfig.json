{
  "compilerOptions": {
    "emitDecoratorMetadata": true,  /* for typeorm requirement */
    "experimentalDecorators": true, /* for typeorm requirement */
    "target": "ES2022",           /* Specify ECMAScript target version */
    "module": "CommonJS",    
    "moduleResolution": "node",   /* for typeorm requirement */
    "strict": true,               /* Enable all strict type-checking options */
    "esModuleInterop": true,      /* Enables interoperability between CommonJS and ES Modules */
    "skipLibCheck": true,         /* Skip type checking of declaration files */
    "forceConsistentCasingInFileNames": true, /* Ensure uniform file casing */
    "outDir": "./dist",           /* Redirect output structure to the directory */
    "rootDir": "./src"            /* Specify the root directory of input files */
  },
  "include": ["src/**/*"]
}
